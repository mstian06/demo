<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <FrameLayout 
        android:id="@+id/content"
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="1"
        >
    </FrameLayout>
    
    <LinearLayout
        android:id="@+id/buttom_tab_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:orientation="horizontal" >

        <RelativeLayout
            android:id="@+id/tab_boutique_layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >
    
            <ImageView
                android:id="@+id/tab_icon1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:gravity="center"
                android:padding="2dp"
                android:src="@drawable/icon1_1"/>
    
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/tab1"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/tab_game_layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >
    
            <ImageView
                android:id="@+id/tab_icon2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:gravity="center"
                android:padding="2dp"
                android:src="@drawable/icon2_1" />
    
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/tab2"
                android:textSize="12sp"
                android:visibility="gone" />
        </RelativeLayout>
    
        <RelativeLayout
            android:id="@+id/tab_software_layout"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingBottom="5dp"
            android:paddingTop="5dp" >
    
            <ImageView
                android:id="@+id/tab_icon3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:contentDescription="@null"
                android:focusable="false"
                android:gravity="center"
                android:padding="2dp"
                android:src="@drawable/icon3_1" />
    
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="2dp"
                android:gravity="center"
                android:text="@string/tab3"
                android:textSize="12sp" 
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>
